!!!5
%html
  %head
    %meta{ charset: "utf-8" }
    %title App
    %link{ href: "/css/vendor/bulma.css", type: "text/css", rel: "stylesheet" }
    %link{ href: "/css/style.css", type: "text/css", rel: "stylesheet" }

  %body{ class: body_class }
    .container
      %nav.navbar{"aria-label" => "main navigation", role: "navigation"}
        .navbar-brand
          %a.navbar-burger.burger{"aria-expanded" => "false", "aria-label" => "menu", "data-target" => "navbarBasicExample", :role => "button"}
            %span{"aria-hidden" => "true"} Home
        #navbarBasicExample.navbar-menu
          .navbar-start
            %a.navbar-item{ href: "/" } Home

      %section.hero.is-light
        .hero-body
          .container.hs20
            %h1
              %a.title{ href: "/" } Covid Stats
            %h2.subtitle
              Data Map

      %section.content
        .box
          = yield

          %p
            Data from
            %a{ href: "https://ourworldindata.org" } ourworldindata.org
            \- last update #{Stats.data_timestamp[0..-14]}

    %script{ type: "text/javascript" }
      window.data_7d_deaths_europe        = #{Stats.all[:europe]}
      window.data_7d_deaths_australia     = #{Stats.all[:australia]}
      window.data_7d_deaths_usa           = #{Stats.all[:usa]}
      window.data_7d_deaths_asia          = #{Stats.all[:asia]}
      window.data_7d_deaths_south_america = #{Stats.all[:south_america]}

    %script{:src => "https://www.gstatic.com/charts/loader.js", :type => "text/javascript"}
    %script{ src: "/js/app.js", type: "text/javascript" }
